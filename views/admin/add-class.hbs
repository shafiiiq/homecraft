<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Document</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            padding: 0;
            margin: 0;
            outline: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            border: 0;
            list-style-type: none;
            text-decoration: none;
        }

        body {
            background-color: #191919;
            width: 100vw;
            height: 100vh;
            position: relative;
        }

        .container-confirm {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgb(54, 54, 54);
            display: flex;
            justify-content: center;
            align-items: center;
            color: rgb(191, 191, 191);
            flex-direction: column;
            gap: 1rem;
            overflow: hidden;
            opacity: 0;
            visibility: hidden;
        }

        .expand {
            opacity: 1;
            visibility: visible;
            animation: expandContainer 0.5s ease forwards;
        }

        @keyframes expandContainer {
            0% {
                width: 0;
                height: 0;
                border-radius: 100vw;
                opacity: 0;
            }

            100% {
                width: 100vw;
                height: 100vh;
                border-radius: 0;
                opacity: 1;
            }
        }


        h1.heading {
            font-weight: 400;
            font-size: 60px;
            text-align: center;
            animation: headingOpacity 1s ease;
            z-index: 1;
        }

        @keyframes headingOpacity {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }


        p.back {
            font-size: 20px;
            cursor: pointer;
            z-index: 1;
        }

        .container img {
            position: absolute;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            width: 20rem;
            z-index: 1;
        }

        .p-clicked {
            animation: shrinkContainer 0.4s ease forwards;
        }

        @keyframes shrinkContainer {
            0% {
                width: 100vw;
                height: 100vh;
                border-radius: 0;
                opacity: 1;
            }

            100% {
                width: 0;
                height: 0;
                border-radius: 100vw;
                opacity: 0;
            }
        }

        .img-clicked {
            animation: hideImage 0.2s ease forwards;
        }

        @keyframes hideImage {
            0% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

        h1.heading-clicked {
            animation: hideHeading 0.2s ease forwards;
        }

        @keyframes hideHeading {
            0% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

        a {
            color: rgb(221, 221, 221);
            font-size: 20px;
        }

        input.add-class {
            width: 30rem;
            height: 3.5rem;
            border-radius: 30px;
            background-color: transparent;
            border: 1px solid rgb(94, 94, 94);
            padding: 0 0 0 13rem;
            color: white;
        }

        input.add-class::placeholder {
            color: rgb(163, 163, 163);
        }

        .add-action {
            display: flex;
            gap: 2rem;
            align-items: center;
            height: 4rem;
            margin-top: 1rem;
            justify-content: center;
        }

        p.admin-know {
            text-align: center;
            font-size: 20px;
        }

        .controls {
            width: 5rem;
            height: 3rem;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .yes {
            background-color: rgb(8, 152, 39);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .yes:hover {
            background-color: rgb(9, 135, 36);

        }

        .no {
            background-color: rgb(163, 15, 15);
            transition: all 0.3s ease
        }

        .no:hover {
            background-color: rgb(153, 12, 12);
        }
    </style>
</head>

<body>
    <p id="click-here" style="color: white; cursor:pointer;">
        click here
    </p>
    <div class="container-confirm">
        <h1 style="font-size: 3rem;" class="heading-confirm">
            Are you sure
        </h1>
        <p class="admin-know">
            If yes which class prefer you<br>
            for this contractor
        </p>
        <form action="">
            <input type="text" name="class" class="add-class" placeholder="A / B / C">
            <p style="text-align: center; margin-top:0.5rem; color:rgb(210, 20, 20);">
                Note that, character must be in capital
            </p>
            <div class="add-action">
                <a class="controls yes">
                    <input type="submit" style="background-color: transparent; font-size: 19px; color:white;"
                        value="Yes">
                    </input>
                </a>
                <a class="controls no">
                    <p class="back" onclick="toggleContainer()">
                        No
                    </p>
                </a>
            </div>
        </form>
        <img src="/images/logo.white.png" alt="">
    </div>z

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const clickHere = document.getElementById('click-here');
            const container = document.querySelector('.container-confirm');
            const img = document.querySelector('.container-confirm img');
            const heading = document.querySelector('.heading-confirm');

            clickHere.addEventListener('click', function () {
                container.classList.remove('p-clicked'); // Ensure that the container is not already collapsed
                container.classList.add('expand'); // Apply the expand animation
                img.style.opacity = 1;
                heading.style.opacity = 1;
            });

            // Function to toggle container on No button click
            function toggleContainer() {
                container.classList.add('p-clicked'); // Remove the expand class
                img.classList.toggle('img-clicked');
            }

            // Attach the toggleContainer function to the No button click event
            const noButton = document.querySelector('.no');
            noButton.addEventListener('click', toggleContainer);
        });
    </script>

</body>

</html>